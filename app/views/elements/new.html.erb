<h1>New element</h1>

<% form_for(@element) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :specification_type %><br />
    <%= f.text_field :specification_type %>
  </p>
  <p>
    <%= f.label :specification_id %><br />
    <%= f.text_field :specification_id %>
  </p>
  <p>
    <%= f.label :configuration_id %><br />
    <%= f.select :configuration_id, Configuration.map_name_and_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', elements_path %>
