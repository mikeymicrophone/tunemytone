<h1>Listing settings</h1>

<table>
  <tr>
    <th>Knob</th>
    <th>Value</th>
  </tr>

<% for setting in @settings %>
  <tr>
    <td><%= link_to_name setting.knob %></td>
    <td><%=h setting.value %></td>
    <td><%= link_to 'Show', setting %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New setting', new_setting_path %>
