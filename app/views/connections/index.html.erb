<h1>Listing connections</h1>

<table>
  <tr>
    <th>Output</th>
    <th>Input</th>
    <th>User</th>
  </tr>

<% for connection in @connections %>
  <tr>
    <td><%= link_to_name connection.output %></td>
    <td><%= link_to_name connection.input %></td>
    <td><%= link_to_name connection.user %></td>
    <td><%= link_to 'Show', connection %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New connection', new_connection_path %>
