<h1>New image</h1>

<% form_for(@image, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <%= f.file_field :photo %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', images_path %>
