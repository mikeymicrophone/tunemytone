<h1>Listing shows</h1>

<table>
  <tr>
    <th>Venue</th>
    <th>Performer type</th>
    <th>Performer</th>
    <th>Performed at</th>
  </tr>

<% for show in @shows %>
  <tr>
    <td><%=h show.venue %></td>
    <td><%=h show.performer_type %></td>
    <td><%=h show.performer_id %></td>
    <td><%=h show.performed_at %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

